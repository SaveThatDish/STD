<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#D8D4D4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/headerbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:contentDescription="@string/desc"
        android:src="@drawable/bluerectangle" 
        android:adjustViewBounds="true" />

    <ImageView
        android:id="@+id/headertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hamburgerButton"
        android:layout_alignLeft="@+id/blueroundedrect"
        android:layout_marginLeft="40dp"
        android:layout_marginTop ="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/desc"
        android:layout_centerHorizontal="true"
        android:src="@drawable/searchtext" />

    <ImageButton
        android:id="@+id/hamburgerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/headerbg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/searchicon"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="12dp"
        android:adjustViewBounds="true"
        android:background="@drawable/hamburger"
        android:contentDescription="@string/desc"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <ImageButton
        android:id="@+id/addButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/headerbg"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        android:adjustViewBounds="true"
        android:background="@drawable/add"
        android:contentDescription="@string/desc"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <ImageView
        android:id="@+id/searchdivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bgwhiterect"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/desc"
        android:src="@drawable/searchdivider" />

    <ImageView
        android:id="@+id/searchicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchdivider"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bgwhiterect"
        android:layout_marginTop="12dp" 
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/desc"
         android:minHeight="0dp"
        android:minWidth="0dp"
        android:src="@drawable/searchicon" />

    <ImageView
        android:id="@+id/bgwhiterect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/headerbg"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/desc"
        android:src="@drawable/whiterectangle" />

    <ImageView
        android:id="@+id/whiteroundedrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bgwhiterect"
        android:layout_alignLeft="@+id/searchDishList"
        android:layout_alignTop="@+id/bgwhiterect"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/addButton"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/desc"
        android:src="@drawable/whiteroundedrect" />

    <ImageView
        android:id="@+id/blueroundedrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/whiteroundedrect"
        android:layout_alignLeft="@+id/whiteroundedrect"
        android:layout_alignRight="@+id/whiteroundedrect"
        android:layout_alignTop="@+id/whiteroundedrect"
        android:layout_marginRight="56dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/desc"
        android:src="@drawable/blueroundedrect" />

    <AutoCompleteTextView
        android:id="@+id/searchDishList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchdivider"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/bgwhiterect"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:ems="10"
        android:text="@string/searchtext" >

        <requestFocus />
    </AutoCompleteTextView>


</RelativeLayout>
